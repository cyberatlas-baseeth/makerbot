# StandX Market Maker Bot - Environment Variables
# Copy this file to .env and fill in values

# StandX API endpoints
STANDX_API_BASE=https://api.standx.io
STANDX_WS_URL=wss://ws.standx.io

# Wallet private key (hex, without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Trading pair
SYMBOL=ETH-PERP

# Quoting parameters
SPREAD_BPS=5.0
ORDER_SIZE=0.1
REFRESH_INTERVAL=5.0

# Risk limits
MAX_NOTIONAL=10000.0
MAX_POSITION=1.0

# Engine safety
MAX_CONSECUTIVE_FAILURES=5
STALE_ORDER_SECONDS=30
MAX_SPREAD_DEVIATION_BPS=10

# Uptime target (minutes per hour)
UPTIME_TARGET_MINUTES=30
