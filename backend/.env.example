# StandX Market Maker Bot - Environment Variables
# Copy this file to .env and fill in your credentials

# StandX API endpoints
STANDX_API_BASE=https://perps.standx.com
STANDX_WS_URL=wss://perps.standx.com/ws-stream/v1

# StandX API credentials (get from StandX dashboard)
STANDX_JWT_TOKEN=your_jwt_token_here
STANDX_ED25519_PRIVATE_KEY=your_base58_ed25519_key_here
STANDX_WALLET_ADDRESS=0xYourWalletAddress
STANDX_CHAIN=bsc

# Trading pair
SYMBOL=BTC-USD

# Quoting parameters
SPREAD_BPS=50.0
BID_NOTIONAL=500.0
ASK_NOTIONAL=500.0
ORDER_SIZE=0.1
REFRESH_INTERVAL=5.0

# Inventory skew
SKEW_FACTOR_BPS=3.0

# Persistent order management
REQUOTE_THRESHOLD_USD=5.0
PROXIMITY_GUARD_BPS=1.0
AUTO_CLOSE_FILLS=true

# Risk limits
MAX_NOTIONAL=10000.0
MAX_POSITION=1.0

# Engine safety
MAX_CONSECUTIVE_FAILURES=5
STALE_ORDER_SECONDS=30
MAX_SPREAD_DEVIATION_BPS=200

# Uptime target (minutes per hour)
UPTIME_TARGET_MINUTES=30
